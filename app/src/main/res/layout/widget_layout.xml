<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_root_view"
    android:padding="@dimen/widget_padding"
    android:layout_margin="@dimen/widget_margin"
    android:alpha="0.5"
    android:background="#000000">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <View
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:id="@+id/widget_color_ribbon"
            android:background="@color/status_good"
            />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/widget_status_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Fantasticno buraz"
                />

            <TextView
                android:id="@+id/widget_plant_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/widget_status_text"
                android:textColor="@color/white"
                android:alpha="0.5"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/widget_plant_name"
                android:layout_alignEnd="@id/widget_plant_name"
                android:layout_alignBottom="@id/widget_status_text"
                android:id="@+id/widget_update_time"
                android:textColor="@color/white"
                android:alpha="0.5"/>

        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:alpha="0.3"
        android:textColor="@color/white"
        />

    <ImageButton
        android:id="@+id/widget_refresh_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/widget_refresh_image"
        android:background="@android:color/transparent"
        />

</RelativeLayout>