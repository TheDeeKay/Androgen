<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/widget_root_view"
    android:padding="@dimen/widget_padding"
    android:layout_margin="@dimen/widget_margin"
    android:alpha="0.9"
    android:background="@color/black">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:background="@color/status_good"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/widget_status_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:text="Fantasticno buraz"
                />

            <TextView
                android:id="@+id/widget_plant_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/widget_status_text"
                android:textColor="@color/white"
                android:text="Ambrozija"
                android:layout_marginRight="20dp"
                android:alpha="0.6"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/widget_plant_name"
                android:layout_below="@id/widget_status_text"
                android:id="@+id/widget_update_time"
                android:textColor="@color/white"
                android:text="9:12"
                android:alpha="0.6"/>

        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="15%"
        android:textSize="110sp"
        android:textScaleX="1.35"
        android:padding="0dp"
        android:layout_marginTop="-21dp"
        android:includeFontPadding="false"
        android:alpha="0.1"
        android:textColor="@color/white"
        android:layout_alignParentTop="true"
        />

    <ImageButton
        android:id="@+id/widget_refresh_button"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/widget_refresh_image"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        />

</RelativeLayout>